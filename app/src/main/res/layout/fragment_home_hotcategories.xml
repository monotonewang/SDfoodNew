<?xml version="1.0" encoding="utf-8"?>
<!--这是热门标签的布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/fragment_home_hotcategries_mostPopularOfWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/fragment_home_hotcategries_mostPopularOfWeek_sdv"
                fresco:viewAspectRatio="1"
                android:layout_width="wrap_content"
                android:layout_height="100dp" />
            <TextView
                android:id="@+id/fragment_home_hotcategries_mostPopularOfWeek_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/fragment_home_hotcategries_newCookbook_sdv"
                fresco:viewAspectRatio="1"
                android:layout_width="wrap_content"
                android:layout_height="100dp" />
            <TextView
                android:id="@+id/fragment_home_hotcategries_newCookbook_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/fragment_home_hotcategries_newWorks_sdv"
                fresco:viewAspectRatio="1"
                android:layout_width="wrap_content"
                android:layout_height="100dp" />
            <TextView
                android:id="@+id/fragment_home_hotcategries_newWorks_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/fragment_home_hotcategries_newPai_sdv"
                fresco:viewAspectRatio="1"
                android:layout_width="wrap_content"
                android:layout_height="100dp" />
            <TextView
                android:id="@+id/fragment_home_hotcategries_newPai_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </LinearLayout>


</LinearLayout>