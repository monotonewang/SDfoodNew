<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_lv_margin_top_bottom"
    android:paddingBottom="@dimen/activity_lv_margin_top_bottom"
    android:paddingLeft="@dimen/x10"
    android:paddingRight="@dimen/x10"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        app:cardCornerRadius="@dimen/activity_corner_radius"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/fragment_home_morecb_lv_sdv"
            android:layout_width="wrap_content"
            fresco:viewAspectRatio="1"
            android:layout_height="100dp" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:paddingLeft="@dimen/activity_lv_margin_top_bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fragment_home_morecb_lv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/lv_fragment_home_morecb_iv_yun"
                android:layout_alignParentRight="true"
                android:src="@drawable/yun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <TextView
            android:id="@+id/fragment_home_morecb_lv_nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:ellipsize="end"
            android:singleLine="true"
            android:id="@+id/fragment_home_morecb_lv_ingredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_home_morecb_lv_likeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/activity_caixi_detail_empty_text"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/fragment_home_morecb_lv_commentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>