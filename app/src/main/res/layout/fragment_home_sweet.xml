<?xml version="1.0" encoding="utf-8"?>
<!--甜点的布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/y10"
    android:layout_height="@dimen/y160"
    android:background="@color/fragment_home_view_bgcolor"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/fragment_home_staple"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/fragment__home_sweet_recommend_tvname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/fragment_home_staple"
                android:textSize="@dimen/fragment_home_view_head_word"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragment__home_sweet_recommend_tvdescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/fragment_home_staple_style" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/fragment_home_staple_style"
            android:visibility="invisible" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/fragment__home_sweet_recommend_imageurl"
            android:layout_width="@dimen/x110"
            android:layout_height="0dp"
            android:layout_weight="3"
            fresco:roundAsCircle="true"
            fresco:viewAspectRatio="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/fragment_home_staple_style"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y160"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView
                    android:textSize="@dimen/fragment_home_view_hot_categories_wordsecond"
                    android:id="@+id/fragment__home_sweet_breakfast_tvname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/fragment_home_porridge"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fragment__home_sweet_breakfast_tvdescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fragment__home_sweet_breakfast_tvname"
                    android:text="@string/fragment_home_porridge_style" />


                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/fragment__home_sweet_breakfast_imageurl"
                    android:layout_width="@dimen/x100"
                    android:layout_height="@dimen/x100"
                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/x10"
                    fresco:roundAsCircle="true" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="@dimen/fragment_home_view_hot_categories_wordsecond"
                        android:id="@+id/fragment__home_sweet_lunch_tvname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/fragment_home_hotfood"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_below="@+id/fragment__home_sweet_lunch_tvname"
                        android:id="@+id/fragment__home_sweet_lunch_tvdescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_home_hotfood_style" />

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:id="@+id/fragment__home_sweet_lnuch_imageurl"
                        android:layout_width="@dimen/x50"
                        android:layout_height="@dimen/x50"
                        android:paddingRight="@dimen/x10"
                        android:paddingBottom="@dimen/x10"
                        fresco:roundAsCircle="true" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textSize="@dimen/fragment_home_view_hot_categories_wordsecond"
                        android:id="@+id/fragment__home_sweet_dinner_tvname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/fragment_home_snacks"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_below="@+id/fragment__home_sweet_dinner_tvname"
                        android:id="@+id/fragment__home_sweet_dinner_tvdescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_home_snacks_style" />

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:id="@+id/fragment__home_sweet_dinner_imageurl"
                        android:layout_width="@dimen/x50"
                        android:layout_height="@dimen/x50"
                        android:paddingRight="@dimen/x10"
                        android:paddingBottom="@dimen/x10"
                        fresco:roundAsCircle="true" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>